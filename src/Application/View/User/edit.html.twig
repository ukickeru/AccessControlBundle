{% extends '@access-control-bundle/User/base.html.twig' %}

{% block title %}Редактировать пользователя "{{ user.userName }}"{% endblock %}

{% block acl_page_header_text %}Редактировать пользователя "{{ user.userName }}"{% endblock %}

{% block acl_page_body %}
    <div class="wrapper pb-3">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex justify-content-left align-items-center">
                <div class="mr-1">
                    <button type="submit" class="btn btn-outline-success mr-2">{{ button_label|default('Сохранить') }}</button>
                </div>
                <div class="mx-1">
                    <a class="btn btn-outline-primary" href="{{ path('user_index') }}">Назад к списку</a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>

    <div class="d-flex justify-content-end align-items-center">
        <div class="ml-1">
            {{ include('@access-control-bundle/User/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
